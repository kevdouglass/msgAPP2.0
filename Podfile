# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'WhatsApp_2' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!


	
	# Firebase pods
	pod 'Firebase/Database'
	pod 'Firebase/Core'
	pod 'Firebase/Auth'
	pod 'Firebase/Storage'
	pod 'Firebase/Firestore'


	# show user notifications on screen
	# if error: success / error
	pod 'ProgressHUD'

	# progress bar for sending AUDIO/ PICTURE msgs
	pod 'MBProgressHUD'

	# used for recording AUDIO messages
	pod 'IQAudioRecorderController'

	#import Contacts from iPhone
	pod 'libPhoneNumber-iOS', '~> 0.8'


	# for messenger 7.3.3 is the "stable version"
	# good for chat purpose
	pod 'JSQMessagesViewController', '7.3.3'
	# display messenger
	pod 'IDMPhotoBrowser'
	#  for nice images/ icons
	pod 'ImagePicker'
	
	# for Encryption/ Decryption of Data
	pod 'RNCryptor'


  # Pods for WhatsApp_2

end
